<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title><%= page_title %> | <%= title %></title>
    <link href="style.css" rel="stylesheet">
  </head>
  <body>
    <header class="bar">
      <nav>
        <% if prev_page %>
          <a href="<%= prev_page.filename %>.html">&larr; prev</a>
        <% else %>
          <a href="#"></a>
        <% end %>

        <a href="index.html"><em><%= title %></em></a>

        <% if next_page %>
          <a href="<%= next_page.filename %>.html">next &rarr;</a>
        <% else %>
          <a href="#"></a>
        <% end %>
      </nav>
    </header>
    <div id="container">
      <%= content %>
    </div>
    <div id="version">
      <a href="https://github.com/snaptoken/<%= name %>-tutorial/tree/v<%= version %>"><%= version %></a>
      (<a href="https://github.com/snaptoken/<%= name %>-tutorial/blob/master/CHANGELOG.md">changelog</a>)
    </div>
    <footer class="bar">
      <nav>
        <a href="#">top of page</a>
      </nav>
    </footer>
  </body>
</html>
